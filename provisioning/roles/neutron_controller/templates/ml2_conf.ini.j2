[DEFAULT]
[l2pop]

[ml2]
type_drivers = local,flat,vlan,geneve
tenant_network_types = geneve
mechanism_drivers = ovn
extension_drivers = port_security
overlay_ip_version = 4

[ml2_type_flat]
ml2_type_flat = *

[ml2_type_geneve]
vni_ranges = 1:65536
max_header_size = 38

[ml2_type_gre]
[ml2_type_vlan]

[ml2_type_vxlan]
vni_ranges = 10:100
vxlan_group = 224.0.0.1

[securitygroup]
enable_security_group = true

[ovn]
ovn_nb_connection = tcp:{{ hostvars[inventory_hostname]['ansible_eth1']['ipv4']['address'] }}:6641
ovn_sb_connection = tcp:{{ hostvars[inventory_hostname]['ansible_eth1']['ipv4']['address'] }}:6642
ovn_l3_scheduler = leastloaded
enable_distributed_floating_ip = true
ovn_metadata_enabled = true
